{% extends 'base.html.twig' %}

{% block body %}
    <h1>Produits list</h1>

    <table>
        <thead>
            <tr>
                <th>Idproduit</th>
                <th>Libelle</th>
                <th>Reference</th>
                <th>Marque</th>
                <th>Prix</th>
                <th>Quantite</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td><a href="{{ path('produit_show', { 'idProduit': produit.idProduit }) }}">{{ produit.idProduit }}</a></td>
                <td>{{ produit.libelle }}</td>
                <td>{{ produit.reference }}</td>
                <td>{{ produit.marque }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.quantite }}</td>
                <td>{{ produit.image }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('produit_show', { 'idProduit': produit.idProduit }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('produit_edit', { 'idProduit': produit.idProduit }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('produit_new') }}">Create a new produit</a>
        </li>
    </ul>
{% endblock %}
